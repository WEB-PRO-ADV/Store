@model IEnumerable<Store.Core.Entities.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row page-titles mx-0">
    <div class="col p-md-0 flex-display">
        <ol class="breadcrumb">
            <li><a asp-action="Index" asp-area="admin">Categories</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Categories</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>
                                        <span class="custom-center">
                                            #
                                        </span>
                                    </th>
                                    <th>
                                        <span class="custom-center">
                                            @Html.DisplayNameFor(model => model.Name)
                                        </span>
                                    </th>
                                    <th>
                                        <span class="custom-center">
                                            @Html.DisplayNameFor(model => model.Description)
                                        </span>
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int cnt = 1; }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="custom-center">
                                                @cnt
                                            </span>
                                            @{ cnt++; }
                                        </td>
                                        <td>
                                            <span class="custom-center">
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </span>
                                        </td>
                                        <td>
                                            <span class="custom-center">
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </span>
                                        </td>
                                        <td>
                                            <span class="custom-center" onclick='sweetAjax("@Html.DisplayFor(modelItem => item.Name)", @Html.DisplayFor(modelItem => item.Name))'>
                                                <i class="ti-plus circle-icon custom-green"></i>
                                            </span>
                                            @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                <tr>
                                    <th>
                                        <span class="custom-center">
                                            #
                                        </span>
                                    </th>
                                    <th>
                                        <span class="custom-center">
                                            @Html.DisplayNameFor(model => model.Name)
                                        </span>
                                    </th>
                                    <th>
                                        <span class="custom-center">
                                            @Html.DisplayNameFor(model => model.Description)
                                        </span>
                                    </th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- #/ container -->

